@model Production.Models.Budget

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/css/styles.css"/>
    <title>Budget</title>
</head>
<body>
<div>
    <div>
        <h2>
            Budget
        </h2>
    </div>
    <table>
        <thead>
        <tr>
            <th>Total Amount</th>
            <th>Percentage</th>
            <th>Bonus Percentage</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>@Model.TotalAmount</td>
            <td>@Model.Percentage</td>
            <td>@Model.BonusPercentage</td>
            <td>
                <a href="@Url.Action("GetBudgetForUpdate")" class="btn btn-warning">Edit</a>
            </td>
        </tr>
        
        </tbody>
    </table>
    
</div>
</body>
</html>