@model List<Production.Models.FinishedProduct>

<!DOCTYPE html>

<html lang="en">
<head>
    <title>List Of Products</title>
    <link rel="stylesheet" href="~/css/styles.css"/>
</head>
<body>
<div>
    <div>
        <h2>
            Finished Products
        </h2>
    </div>
    <div class="under_table_buttons">
        <a href="@Url.Action("CreateProduct")" class="btn btn-primary">Add</a>
    </div>
    @if (Model.Count == 0)
    {
        <p>Products not found.</p>
    }
    else
    {
        <table>
            <thead>
            <tr>
                <th>Name</th>
                <th>Measurement Unit</th>
                <th>Quantity</th>
                <th>Total Cost</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.MeasurementUnit.Name</td>
                    <td>@product.Quantity</td>
                    <td>@product.TotalAmount</td>
                    <td>
                        <a href="@Url.Action("GetProductById", new {id = product.Id})" class="btn btn-warning">Edit</a>
                        <form class="delete_product"  method="post" action="@Url.Action("DeleteProduct", new {id = product.Id})">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    
</div>

</body>
</html>