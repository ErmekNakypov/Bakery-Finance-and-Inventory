@model List<Production.DTO.EmployeeDto>

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Employees</title>
    <link rel="stylesheet" href="~/css/styles.css"/>
</head>
<body>
<div>
    <div>
        <h2>
            Employees
        </h2>
    </div>
    <div class="under_table_buttons">
        <a href="@Url.Action("CreateEmployee")" class="btn btn-primary">Add</a>
    </div>
    @if (Model.Count == 0)
    {
    <h2>Employees not found.</h2>
    }
    else
    {
    <table>
        <thead>
        <tr>
            <th>Fullname</th>
            <th>Position</th>
            <th>Salary</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var employee in Model)
        {
            if (employee.Role != "Admin")
            {
                <tr>
                    <td>@employee.Employee.FullName</td>
                    <td>@employee.Role</td>
                    <td>@employee.Employee.Salary</td>
                    <td>@employee.Employee.Address</td>
                    <td>@employee.Employee.Phone</td>
                    <td>
                        <a href="@Url.Action("GetEmployeeById", new { id = employee.Employee.Id })" class="btn btn-warning">Edit</a>
                        <form class="delete_product" method="post" action="@Url.Action("DeleteEmployee", new { id = employee.Employee.Id })">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
    }
</div>
</body>
</html>