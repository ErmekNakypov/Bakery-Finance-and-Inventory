@model Production.Models.RawMaterialPurchase

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/css/styles.css"/>
    <title>@ViewData["Title"]</title>
</head>
<body>
<div>
    <h2>
        @ViewData["Title"]
    </h2>
</div>

<div class="edit_product mt-4">

    <form action="@ViewData["Action"]" method="post">
        @if (!ViewData.ModelState.IsValid)
        {
        <div class="alert alert-danger">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </div>
        }
        <input type="hidden" name="ID" value="@Model.Id"/>

        <div class="form-group mb-3">
            <label for="RawMaterialId">Raw Material</label>
            <select class="form-control" id="RawMaterialId" name="RawMaterialId">
                @foreach (var unit in ViewBag.RawMaterials)
                {
                <option value="@unit.Id" selected="@(unit.Id == Model.RawMaterialId ? "selected" : null)"> @unit.Name</option>
                }
            </select>
        </div>
        
        <div class="form-group mb-3">
            <label for="Quantity">Quantity</label>
            <input type="number" class="form-control" id="Quantity" name="Quantity" step="0.01" value="@Model.Quantity">
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="TotalAmount">Total Amount</label>
            <input type="number" class="form-control" id="TotalAmount" name="TotalAmount" step="0.01" value="@Model.TotalAmount">
            <span asp-validation-for="TotalAmount" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="PurchaseDate">Purchase Date</label>
            <input type="date" class="form-control" id="PurchaseDate" name="PurchaseDate" value="@(Model.PurchaseDate == default(DateOnly) ? DateTime.Today.Date.ToString("yyyy-MM-dd") : Model.PurchaseDate.ToString("yyyy-MM-dd"))">
            <span asp-validation-for="PurchaseDate" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="EmployeeId">Employee</label>
            <select class="form-control" id="EmployeeId" name="EmployeeId">
                @foreach (var emp in ViewBag.Employees)
                {
                <option value="@emp.Id" selected="@(emp.Id == Model.EmployeeId ? "selected" : null)"> @emp.FullName</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Сохранить</button>
    </form>
</div>
</body>
</html>