@model Production.Models.Budget

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/styles.css"/>
</head>
<body>
<div>
    <h2>
        @ViewData["Title"]
    </h2>
</div>

<div class="edit_product mt-4">

    <form action="@ViewData["Action"]" method="post">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>
        }
        <input type="hidden" name="ID" value="@Model.Id"/>

        <div class="form-group mb-3">
            <label for="TotalAmount">Total amount</label>
            <input type="number" step="0.01" class="form-control" id="TotalAmount" name="TotalAmount" value="@Model.TotalAmount">
            <span asp-validation-for="TotalAmount" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="Percentage">Percentage</label>
            <input type="number" step="0.01" class="form-control" id="Percentage" name="Percentage" value="@Model.Percentage">
            <span asp-validation-for="Percentage" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="BonusPercentage">Bonus Percentage</label>
            <input type="number" step="0.01" class="form-control" id="BonusPercentage" name="BonusPercentage" value="@Model.BonusPercentage">
            <span asp-validation-for="Percentage" class="text-danger"></span>
        </div>
        
        
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </form>
</div>

</body>
</html>