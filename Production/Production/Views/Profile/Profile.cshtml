@model Production.DTO.UpdateEmployeeDto

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Profile</title>
    <link rel="stylesheet" href="~/css/styles.css"/>
</head>
<body>
<div>
    <h2>
        Profile
    </h2>
</div>

<div class="edit_product mt-4">

    <form action="@Url.Action("UpdateProfile")" method="post">
        @if (!ViewData.ModelState.IsValid)
        {
        <div class="alert alert-danger">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </div>
        }
        <input type="hidden" name="ID" value="@Model.Id"/>
        
        <div class="form-group mb-3">
            <label for="Name">FullName</label>
            <input type="text" class="form-control" id="Name" name="FullName" value="@Model.FullName">
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        
        <div class="form-group mb-3">
            <label for="Address">Address</label>
            <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="Phone">Phone</label>
            <div class="input-group">
                <span class="input-group-text">+996</span>
                <input type="tel" class="form-control" id="Phone" name="Phone" value="@Model.Phone"
                       pattern="\d{9}"
                       title="Введите 9 цифр без пробелов"
                       maxlength="9"
                       placeholder="Введите номер (например, 556584858)"
                       required>
            </div>
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </form>
</div>

</body>
</html>