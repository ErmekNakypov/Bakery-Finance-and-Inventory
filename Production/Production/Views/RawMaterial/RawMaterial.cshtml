@model List<Production.Models.RawMaterial>

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/css/styles.css"/>
    <title>Raw materials</title>
</head>
<body>
<div>
    <div>
        <h2>
            Raw materials
        </h2>
    </div>
    <div class="under_table_buttons">
        <a href="@Url.Action("CreateRawMaterial")" class="btn btn-primary">Add</a>
    </div>
    @if (Model.Count == 0)
    {
    <p>Raw materials not found.</p>
    }
    else
    {
    <table>
        <thead>
        <tr>
            <th>Name</th>
            <th>Measurement Unit</th>
            <th>Quantity</th>
            <th>Total Cost</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var rawMaterial in Model)
        {
        <tr>
            <td>@rawMaterial.Name</td>
            <td>@rawMaterial.MeasurementUnit.Name</td>
            <td>@rawMaterial.Quantity.ToString("f2")</td>
            <td>@rawMaterial.TotalAmount.ToString("f2")</td>
            <td>
                <a href="@Url.Action("GetRawMaterialById", new {id = rawMaterial.Id})" class="btn btn-warning">Edit</a>
                <form class="delete_product"  method="post" action="@Url.Action("DeleteRawMaterial", new {id = rawMaterial.Id})">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?');">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
        }
        </tbody>
    </table>
    }

</div>
</body>
</html>