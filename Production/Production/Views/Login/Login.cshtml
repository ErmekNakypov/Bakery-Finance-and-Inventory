@model Production.DTO.LoginDto

@{
    Layout =  "_LoginLayout";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Login</title>
    <link rel="stylesheet" href="~/css/styles.css"/>
</head>
<body>
<div>
    <div>
        <h2>
            Login
        </h2>
    </div>

    <div class="login mt-4">
        <form action="@Url.Action("Login")" method="post">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                </div>
            }
        
            <input type="hidden" name="ID" value="@Model.Id"/>
        
            <div class="form-group mb-3">
                <label for="Login">Login</label>
                <input type="text" step="0.01" class="form-control" id="Login" name="Login">
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="Password">Password</label>
                <input type="password" step="0.01" class="form-control" id="Password" name="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group form-check mb-3">
                <input type="checkbox" class="form-check-input" id="showPasswordCheckBox" onclick="togglePassword()">
                <label class="form-check-label" for="showPasswordCheckBox">Показать пароль</label>
            </div>
        
            <button type="submit" class="btn btn-primary">Log in</button>
        </form>
    </div>

    @section Scripts {
        <script>
        function togglePassword() {
            var passwordInput = document.getElementById("Password");
            passwordInput.type = passwordInput.type === "password" ? "text" : "password";
        }
    </script>
    }
</div>
</body>
</html>