@model Production.DTO.ChangePasswordDto

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Change password</title>
    <link rel="stylesheet" href="~/css/styles.css"/>
</head>
<body>
<div>
    <div>
        <h2>
            Change password
        </h2>
    </div>

    <div class="login mt-4">
        <form action="@Url.Action("ChangePasswordPost")" method="post">
            @if (!ViewData.ModelState.IsValid)
            {
            <div class="alert alert-danger">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>
            }

            <div class="form-group mb-3">
                <label>Current Password</label>
                <input asp-for="CurrentPassword" class="form-control" />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label for="Password">Password</label>
                <input type="password" step="0.01" class="form-control" id="Password" name="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="RepeatPassword">Repeat Password</label>
                <input type="password" step="0.01" class="form-control" id="RepeatPassword" name="RepeatPassword">
                <span asp-validation-for="RepeatPassword" class="text-danger"></span>
            </div>

            <div class="form-group form-check mb-3">
                <input type="checkbox" class="form-check-input" id="showPasswordCheckBox" onclick="togglePassword()">
                <label class="form-check-label" for="showPasswordCheckBox">Show password</label>
            </div>

            <button type="submit" class="btn btn-primary">Change</button>
        </form>
    </div>

    @section Scripts {
    <script>
        function togglePassword() {
            var passwordInput = document.getElementById("Password");
            var passwordInput2 = document.getElementById("RepeatPassword");
            var passwordCurrent = document.getElementById("CurrentPassword");
            passwordInput.type = passwordInput.type === "password" ? "text" : "password";
            passwordInput2.type = passwordInput2.type === "password" ? "text" : "password";
            passwordCurrent.type = passwordCurrent.type === "password" ? "text" : "password";
        }
    </script>
    }
</div>
</body>
</html>