@model List<Production.Models.ProductSale>

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Product Sale</title>
    <link rel="stylesheet" href="~/css/styles.css"/>
</head>
<body>
<div>
    <div>
        <h2>
            Product Sales
        </h2>
    </div>
    <div class="under_table_buttons">
        <a href="@Url.Action("CreateProductSale")" class="btn btn-primary">Sale</a>
    </div>
    @if (Model.Count == 0)
    {
    <h2>Product Sales not found.</h2>
    }
    else
    {
    <table>
        <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Total Amount</th>
            <th>Sale Date</th>
            <th>Employee</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var productSale in Model)
        {
        <tr>
            <td>@productSale.Product.Name</td>
            <td>@productSale.Quantity</td>
            <td>@productSale.TotalAmount</td>
            <td>@productSale.SaleDate</td>
            <td>@productSale.Employee.FullName</td>
            <td>
                <a href="@Url.Action("GetProductSaleById", new {id = productSale.Id})" class="btn btn-warning">Edit</a>
                <form class="delete_product"  method="post" action="@Url.Action("DeleteProductSale", new {id = productSale.Id})">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?');">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
        }
        </tbody>
    </table>
    }

</div>
</body>
</html>